# EditorConfig: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
tab_width = 2

[*.{nix,lock}]
indent_style = space
indent_size = 2

[{*,nix-eval-diff}]
trim_trailing_whitespace = false
